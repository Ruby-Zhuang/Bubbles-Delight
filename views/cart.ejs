<!-- CartPage is a modal that's attached to the cart icon/button on the navbar -->
<div class="modal fade" id="cartPage" tabindex="-1" role="dialog" aria-labelledby="cartPageTitle" aria-hidden="true" >
  <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column mb-0 pb-0">
        <div class="d-flex w-100">
          <h2>Current Orders</h2>
          <button type="button" class="close mr-4" data-dismiss="modal" aria-label="Close" >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th scope="col">Bubbletea</th>
              <th scope="col">Flavor</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
              <th scope="col">Remove</th>
            </tr>
          </thead>
          <div class="spin-parent">
            <div class="spin-child"></div>
          </div>
          <tbody id="cart-items"></tbody>
        </table>
      </div>

      <div class="modal-body m-0 p-0 d-flex justify-content-center"></div>
      <div class="modal-footer container px-5 border-0">
        <!-- <h4 class="total_bubbletea_cost">Total Price: $<span>0.00</span></h4> -->
        <button type="button" class="btn btn-danger mr-3" data-dismiss="modal">
          Close
        </button>
        <button id="submitOrders" type="button" class="btn btn-primary">
          Submit
        </button>
      </div>
    </div>
  </div>
</div>
