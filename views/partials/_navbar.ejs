<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline" method="POST" action="/logout">
        <span class="navbar-text mr-sm-2">Logged in as: <strong class="text-light"><%= user.email %></strong></span>
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Logout <i class="fas fa-sign-out-alt"></i></button>
      </form>
    <% } else { %>
      <a class="nav-item nav-link text-light" href="/login">Login <i class="fas fa-sign-in-alt"></i></a>
      <a class="nav-item nav-link text-light" href="/register">Register <i class="fas fa-user-plus"></i></a>
    <% } %>
  </nav>

    <!-- Nav bar section -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <a class="navbar-brand" href="/bubbleteas" data-link><i class="fas fa-glass-whiskey-rocks"></i> Bubbles Delight</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
      aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/bubbleteas" data-link>Menu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders" data-link>Orders</a>
        </li>
      </ul>

      <!-- Button trigger modal -->
      <button type="button" class="cartBtn m-0 p-0" data-toggle="modal" data-target="#exampleModalCenter">
        <i class="bi bi-bag fa-2x" data-link></i>
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">
                Modal title
              </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">...</div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
              </button>
              <button type="button" class="btn btn-primary">
                Submit
              </button>
            </div>
          </div>
        </div>
      </div>

      <a class="nav-item nav-link text-dark" href="/login" data-link>Login <i class="fas fa-sign-in-alt"></i></a>
      <a class="nav-item nav-link text-dark" href="/register">Register <i class="fas fa-user-plus"></i></a>
    </div>
  </nav>
</header>
